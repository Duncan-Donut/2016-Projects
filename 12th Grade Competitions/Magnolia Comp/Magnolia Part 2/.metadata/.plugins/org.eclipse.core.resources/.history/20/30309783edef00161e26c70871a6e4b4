import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class Olga {

	public static void main(String[] args) throws FileNotFoundException {
		// TODO Auto-generated method stub
		Scanner Sf = new Scanner(new File("Olga.dat"));
		
		while(Sf.hasNext()){
			String input = Sf.next();
			
			
			if(input.length() < 6){
				System.out.print("-");
				if(input.toLowerCase().charAt(0) < 110){
					System.out.print("\\");
					if(input.length() % 2 == 1){
						System.out.println("'" + input + "'/-");
					}
					else{
						System.out.println("\"" + input + "\"/-");
					}
				}
				else{
					System.out.print("\\\\");
					if(input.length() % 2 == 1){
						System.out.println("'" + input + "'//-");
					}
					else{
						System.out.println("\"" + input + "\"//-");
					}
				}
			}
			else{
				System.out.print("=");
				System.out.print("-");
				if(input.toLowerCase().charAt(0) < 110){
					System.out.print("\\");
					if(input.length() % 2 == 1){
						System.out.println("'" + input + "'/=");
					}
					else{
						System.out.println("\"" + input + "\"/=");
					}
				}
				else{
					System.out.print("\\\\");
					if(input.length() % 2 == 1){
						System.out.println("'" + input + "'//=");
					}
					else{
						System.out.println("\"" + input + "\"//=");
					}
				}
			}
			}
		}
		
	}


